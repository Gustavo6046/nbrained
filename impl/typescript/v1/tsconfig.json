{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "target": "ES2015"
    },
    "include": [
        "src/**/*"
    ]    ,
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
